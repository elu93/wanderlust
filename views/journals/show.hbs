<div class="journal-main">
  <div>
    <h1>{{journal.name}}</h1>
    <h3>{{journal.category}}</h3>
  </div>
  <a href="/users/{{userId}}/journals/{{journal._id}}/delete">Delete</a>
  <div>
    <div>
      <h3>{{user.firstName}}'s Posts</h3>
      <a class="button primary" href="/users/{{userId}}/journals/{{journal._id}}/posts/new">Add a Post</a>
    </div>
    <div class="gifts">
      {{#each journal.posts}}
      <div class="gift">
        <a href="/users/{{../userId}}/journals/{{../journal._id}}/posts/{{this._id}}">
          {{this.name}}
        </a>
      </div>
      {{/each}}
    </div>

  </div>
</div>