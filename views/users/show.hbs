
<div class="main">
  
  <div class="description">
    <h1>{{user.firstName}} {{user.lastName}}</h1>
    <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile photo">
  </div>
  <div class="user-info">
    <div>
      <div>
        <a href="/users/{{user._id}}/edit">Update INFO</a>
      </div>
      <div>
        <form action="/users/{{user._id}}/delete?_method=DELETE" method="POST">
          <input class="button" type="submit" value="DELETE User">
        </form>
      </div>
    </div>
    <div>Username:
      <strong>{{user.username}}</strong>
    </div>
    <div>Email:
      <strong>{{user.email}}</strong>
    </div>
    <div class="visit-journal">
      <a href="/users/{{user._id}}/journals">{{user.firstName}} {{user.lastName}}'s Journals</a>
    </div>
  </div>
</div>